<!DOCTYPE html>
<html lang="en">
<head>
  <title>Main Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }
    
    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {height: 450px}
    
    /* Set gray background color and 100% height */
    .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
    }

    .buttontxt {
      font-weight: bold;
      font-size: 20px;
    }
    
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
    
    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }
      .row.content {height:auto;} 
    }
  </style>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/">JobQuest</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="new_thread">New Thread</a></li>
        <li><a href="post_test">About</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      </ul>
    </div>
  </div>
</nav>
  
<div class="container-fluid text-left">    
       <!-- Displays all of the threads and their date-->
       <h3>Threads</h3>
            <% 
            // Sorts posts array in descending order based on vote count. If votes are equal, it sorts
            // by date created in descending order.
            posts.sort(function(a,b) {
              return (parseInt(b.votecount) - parseInt(a.votecount)) || (b.created_at - a.created_at);
            });
            posts.forEach(function(post, i) { %>
            <!-- Display button for upvoting a post -->
            <div style="display: inline-block; padding: 0px 5px 0px 5px;">
              <form action = "http://127.0.0.1:4000/vote_up_post?id=<%= i %>" method = "POST">
                <input class="buttontxt" type="submit" value="&uarr;" />
              </form>
            </div>
            
            <!-- Display a post's current vote count -->
            <div style="display: inline-block;">
              <h3><%= post.votecount %></h3>
            </div>
            
            <!-- Display button for downvoting a post -->
            <div style="display: inline-block; padding: 0px 5px 0px 5px;">
              <form action = "http://127.0.0.1:4000/vote_down_post?id=<%= i %>" method = "POST">
                <input class="buttontxt" type="submit" value="&darr;" />
              </form>
            </div>

            <!-- Display a clickable link of the post's title -->
            <div style="display: inline-block;">
              <a href = "show?id=<%= i %>"><h3><b><%= post.title %></b></h3></a>
            </div>
            
            <!-- Display the post's timestamp -->
            <div>
            <i>Created at <%= post.created_at %></i>
            </div>

            <% }); %>
  </div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>

</body>
</html>